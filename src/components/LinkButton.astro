---
const { href } = Astro.props;
---

<a
    target="_blank"
    href={href}
    role="link"
    class="inline-flex bg-gray-100 text-gray-800 border-gray-300 items-center justify-center gap-2 px-3 py-[0.55rem] space-x-2 text-base transition dark:text-white dark:bg-white/5 border dark:border-white/10 hover:bg-white/10 hover:border-gray-900 group max-w-fit rounded-xl dark:hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black hover:scale-110"
>
    <slot />
</a>
